{
    "private": true,
    "scripts": {
        "dev": "node scripts/dev-safe.js",
        "dev:next": "CHOKIDAR_USEPOLLING=1 WATCHPACK_POLLING=true next dev",
        "dev:turbo": "CHOKIDAR_USEPOLLING=1 WATCHPACK_POLLING=true next dev --turbo",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "test:persistence": "npx tsx test-persistence-flow.ts",
        "test:create-user": "npx tsx scripts/create-test-user.ts",
        "test:verify-user": "npx tsx scripts/create-test-user.ts verify",
        "test:user-watchlist": "npx tsx scripts/test-user-watchlist.ts",
        "test:clear-user": "npx tsx scripts/clear-test-user.ts",
        "delete-all-user-data": "npx tsx scripts/delete-all-user-data.ts",
        "analyze": "ANALYZE=true npm run build",
        "prepare": "husky"
    },
    "dependencies": {
        "@babel/core": "7.28.4",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@heroicons/react": "^2.0.13",
        "@mui/material": "^5.11.7",
        "@next/third-parties": "^16.0.0",
        "@sentry/nextjs": "^10.22.0",
        "@vercel/analytics": "^1.5.0",
        "firebase": "^12.2.1",
        "next": "^16.0.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-hook-form": "^7.43.0",
        "react-player": "^2.11.2",
        "tailwind-scrollbar-hide": "^1.1.7",
        "tailwindcss-autofill": "^1.0.2",
        "tailwindcss-shadow-fill": "^1.0.1",
        "zod": "^3.25.76",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@next/bundle-analyzer": "^15.5.3",
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/node": "18.11.3",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "autoprefixer": "^10.4.12",
        "eslint": "^9.0.0",
        "eslint-config-next": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^30.1.3",
        "jest-environment-jsdom": "^30.1.2",
        "lint-staged": "^16.1.6",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "tailwind-scrollbar": "^2.1.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css}": [
            "prettier --write"
        ]
    }
}
