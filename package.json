        "firebase": "^12.2.1",
        "next": "^15.5.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-hook-form": "^7.43.0",
        "react-icons": "^4.7.1",
        "react-player": "^2.11.2",
